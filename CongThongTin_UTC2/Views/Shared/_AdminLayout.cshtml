    <script>
        $(document).ready(function () {
            $.getJSON("/Admin/GetData", function (data) {
                var names = [];
                var viewCount = [];
                var countComments = [];
                var totalPosts = 0;
                for (var i = 0; i < data.length; i++) {
                    names.push(data[i].name);

                    viewCount.push(data[i].count);
                    countComments.push(data[i].countComment);
                }

                totalPosts = names.length;
                $("#total").html(`${totalPosts}`);
                Highcharts.chart('container', {
                    chart: {
                        type: 'line'
                    },
                    title: {
                        text: 'Biểu đồ thể hiện lượt xem và bình luận của mỗi bài viết'
                    },
                    subtitle: {
                        text: ''
                    },
                    xAxis: {
                        categories: names
                    },
                    yAxis: {
                        title: {
                            text: 'Số lượng'
                        }
                    },
                    plotOptions: {
                        line: {
                            dataLabels: {
                                enabled: true
                            },
                            enableMouseTracking: false
                        }
                    },
                    series: [{
                        name: 'Số lượt view',
                        data: viewCount
                    }, {
                        name: 'Số lượt bình luận',
                        data: countComments
                    }
                    ]

                });
            });
            $.getJSON("/Admin/GetDataNow", function (data) {
                var names = [];
                var viewCount = [];
                var countComments = [];
                var totalCountView = 0;
                var totalComment = 0;
                var totalPosts = 0;
                for (var i = 0; i < data.length; i++) {
                    names.push(data[i].name);
                    viewCount.push(data[i].count);
                    countComments.push(data[i].countComment);
               
                }
                totalPosts = names.length;
                $("#totalnow").html(`${totalPosts}`);
                viewCount.map((value) => {
                    totalCountView += value;
                });
                countComments.map((value) => {
                    totalComment += value;
                });

               
                Highcharts.chart('containernew', {
                    title: {
                        text: 'Thống kê lượt xem và số bình luận ngày hôm nay'
                    },
                    xAxis: {
                        categories: names
                    },
                    yAxis: {
                        title: {
                            text: 'Số lượng'
                        }
                    },
                    labels: {
                        items: [{
                            html: '',
                            style: {
                                left: '50px',
                                top: '18px',
                                color: ( // theme
                                    Highcharts.defaultOptions.title.style &&
                                    Highcharts.defaultOptions.title.style.color
                                ) || 'black'
                            }
                        }]
                    },
                    series: [{
                        type: 'column',
                        name: 'Số lượt view',
                        data: viewCount
                    }, {
                        type: 'column',
                        name: 'Số lượt bình luận',
                        data: countComments
                    }, {
                        type: 'spline',
                        name: 'Số lượt xem',
                        data: viewCount,
                        marker: {
                            lineWidth: 2,
                            lineColor: Highcharts.getOptions().colors[3],
                            fillColor: 'white'
                        }
                    }, {
                        type: 'pie',
                        name: 'Tổng',
                        data: [{
                            name: 'Số lượt view',
                            y: totalCountView,
                            color: Highcharts.getOptions().colors[0] // Jane's color
                        }, {
                            name: 'Số lượt bình luận',
                            y: totalComment,
                            color: Highcharts.getOptions().colors[1] // John's color
                        }],
                        center: [100, 80],
                        size: 100,
                        showInLegend: false,
                        dataLabels: {
                            enabled: false
                        }
                    }]
                });


            });
        });
  
    </script>
